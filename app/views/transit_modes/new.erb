<div class="row">
  <h3>Add the types of transit availbale in <%= @city.name %> to your page!</h3>
</div>
<form method='post' action='/cities/<%= @city.id %>/transit_modes'>
   <div class="row" style="margin: 0">
    <div class="input-field">
      <input id="city-name" name='name' type="text" class="validate" value="<%= @failed_city_name %>">
      <label for="city-name">The name of the transit mode</label>
    </div>
  </div>  
  
  <div class="row center-align">
    <h5>To submit, choose an icon for this transit mode from the selection below:</h5>
  </div>
  <input type="hidden" id="icon" name="icon">
  <div class="row center-align">
    <div class="col s3">
      <button class="btn-floating btn-large red" id="subway" type="submit" name="action"><i class="large mdi-maps-directions-subway"></i></button>
    </div>
    <div class="col s3">
      <button class="btn-floating btn-large yellow darken-1" id="bus" type="submit" name="action"><i class="large mdi-maps-directions-bus"></i></button>
    </div>
      <button class="btn-floating btn-large green" id="train" type="submit" name="action"><i class="large mdi-maps-directions-train"></i></button>
    <div class="col s3">
      <button class="btn-floating btn-large blue" id="bike" type="submit" name="action"><i class="large mdi-maps-directions-bike"></i></button>
    </div>
  </div>
</form>
<div class="row">
</div>
<div class="row">
  <% if @city.transit_modes.any? %>
     <ul class="collection">
      <% @city.transit_modes.each do |mode| %>
      <li class="collection-item avatar">
        <i class="medium <%= mode.icon %> circle"></i>
        <span class="title"><%= mode.name %></span>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="row center">
  <a href="/cities/<%= @city.id %>/transit_modes/" class="btn waves-effect waves-light" type="submit" name="action">Continue to Edit Further
    <i class="mdi-content-add right"></i>
  </a>
</div>