
<h2><%= current_user.username %></h2>

<% if current_user.pic_url == nil%>

  <form method="post" action="/users/show">
    <div class="row">
      <div class="input-field">
        <label>Enter the url for your picture ^.^ </label>
        <input type="url" name="pic_url">
      </div>
    </div>
    <div class="row center-align">
       <button class="btn waves-effect waves-light orange-n" type="submit">Add Picture</button>
    </div>
  </form>

<% else %>
  <div class="left-align col m4">
    <img src= <%= current_user.pic_url %> alt="Profile Pic" height="250" width="250"> 
  </div>

<% end %>
<div class="center-align col m8">
  <h4>Email:<small> <%= current_user.email %></small></h4>
</div>

<% if current_user %>
  <form class ="center-align col m8" method="get" action="/users/edit">
    <div>
      </br></br>
      <button class="btn waves-effect waves-light orange-n" type="submit">Change My Info</button>
    </div>
  </form> 
<% end %>


