
<div class="row valign-wrapper">
  <div class="col s9">
  <h2><%= current_user.username %></h2>
  </div>
  <% if current_user %>
    <div class="col s3">
  <!-- <div class="right-aling" -->
      <a href='/users/edit' class="btn waves-effect waves-light orange-n right">Change My Info</a>
    </div>
  <% end %>
</div>

<div class="row">

  <% if current_user.pic_url%>
    <div class="left-align col m4">
      <img id="profile-pic" src= <%= current_user.pic_url %> alt="Profile Pic"> 
    </div>
  <% else %>
    <div class="left-align col m4">
      <img id="profile-pic" src='/img/profile_default.png' alt="Profile Pic"> 
    </div>
  <% end %>

  <div class="col m8">
    <h4>Email: <%= current_user.email %></h4>
  </div>

  <% unless current_user.pic_url %>
    <div class="col m8">
      <form method="post" action="/users/show">
        <input type="hidden" name="_method" value="PUT">
        <div class="input-field">
          <label for="inputPic">Enter the url for your picture ^.^ </label>
          <input type="url" id="inputPic" name="pic_url">
        </div>
        <div class="row right-align">
           <button class="btn waves-effect waves-light orange-n" type="submit">Add Picture</button>
        </div>
      </form>
    </div>
  <% end %>
</div>



