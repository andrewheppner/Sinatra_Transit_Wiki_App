
<form method="post" action='/users'>
  <div class="row">
    <h2 class="center-align">Register</h2>
    <p class="flow-text"><small>Register to create and edit pages and view other users' profiles!</small></p>
    <div class="input-field registration">
      <input id="username" name="username" type="text" class="validate" value="<%= @user.username %>">
      <label for="username">User Name</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field registration">
      <input id="reg-email" type="email" class="validate" name="email" value="<%= @user.email %>">
      <label for="reg-email">Email</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field registration">
      <input id="reg-password" name="password" type="password" class="validate">
      <label for="reg-password">Password</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field registration">
      <input id="password_confirm" name="password_confirm" type="password" class="validate">
      <label for="password_confirm">Confirm Password</label>
    </div>
  </div>
  <div class="row center-align">
    <button id="registration-button" class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="mdi-content-add right"></i>
    </button>
  </div>
</form>
