<div class="row container">
  
  <!-- TODO: Make smaller? Or maybe make it a modal -->
  <div class="row">
    <% if @user.errors.any? %>
      <h5 class="flow-text"><strong>Some issues with your registration, please fix them:</strong></h5>
      <ol>
        <% @user.errors.full_messages.each do |message| %>
          <li class="flow-text"><%= message %></li>
        <% end %>
      </ol>
    <% end %>
  </div>
  <form method="post" action='/users'>
    <div class="row">
      <h2 class="center-align">Register</h2>
      <p class="flow-text">Register to create and edit pages and few other users' profiles!</p>
      <div class="input-field">
        <label for="username">User Name</label>
        <input id="username" name="username" type="text" class="validate" value="<%= @user.username %>">
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <label for="email">Email</label>
        <input id="email" type="email" class="validate" name="email" value="<%= @user.email %>">
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <input id="password_confirm" name="password_confirm" type="password" class="validate">
        <label for="password_confirm">Confirm Password</label>
      </div>
    </div>
    <div class="row center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="mdi-content-add right"></i>
  </button>
    </div>
  </form>
</div>